---
import Favicon from "@/components/Favicon.astro"
---
<nav class="glass-menu sticky top-0 z-20 flex justify-between items-center w-full max-w-3xl h-20 px-[5%] lg:p-0 mx-auto rounded-full text-[var(--cristal-text)]">
    <picture class="h-full py-4 flex items-center">
        <Favicon />
        <span class="font-handwriting text-6xl cursor-default">lpes</span>
    </picture>
    <ul id="menu" class="hidden md:flex items-center justify-center gap-6">
        <li><a class="duration-300 hover:text-white" href="#home">Inicio</a></li>
        <li><a class="duration-300 hover:text-white" href="#services">Servicios</a></li>
        <li><a class="duration-300 hover:text-white" href="#contact">Contacto</a></li>
    </ul>
    <a class="duration-300 hover:text-white" href="#">
        <svg width="48"  height="48"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" /><path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" /></svg>
    </a>
</nav>

<style>
    #menu {
        transform: scale(1);
    }
    .glass-menu {
        animation: glass-menu linear both;
        animation-timeline: scroll(root block);
        animation-range: 0 8rem;
    }
    @keyframes glass-menu {
        to {
            background-color: rgba(var(--rgb-text), 0.2);
            backdrop-filter: blur(.25rem);
            color: var(--bg);
            border-radius: 5rem;
            top: 1rem;
            width: 80%;
            height: 4rem;
            padding: 0 1rem;
        }
    }
</style>