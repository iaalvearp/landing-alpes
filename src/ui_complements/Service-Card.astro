---
import Arrow from './Arrow.astro';

interface Props {
    title: string,
    text: string,
    href: string,
    id?: string
}

const { title, text, href, id } = Astro.props;
---

<article id={ id } class="grid w-full max-w-80 items-center py-2 px-3 grid-cols-[1fr_2.5rem] grid-rows-[2.5rem_1fr] mx-auto duration-300 overflow-hidden">
    <h2 class="title col-start-1 col-end-2 row-start-1 row-end-2 cursor-default duration-300">{title}</h2>
    <p class="text-font text-[var(--text-secondary)] col-start-1 col-end-2 row-start-2 row-end-3 cursor-default duration-300">{text}</p>
    <slot class="col-start-2 col-end-3 row-start-1 row-end-2 w-full h-auto" />
    <a href={href} class="h-full flex items-center col-start-2 col-end-3 row-start-2 row-end-3 translate-y-[150%] duration-500 m-auto">
        <Arrow />
    </a>
    
</article>

<style>
    article {
        box-shadow: -1px 1px 1px var(--secondary);
    }
    article:hover {
        box-shadow: -4px 4px 12px var(--secondary);
    }
    article:hover a {
        transform: translateY(0);
    }
    article:hover h2 {
        color: var(--gold);
    }
    article:hover p {
        color: var(--secondary);
    }
</style>